<div class="page-header">
  <h1><%- (obj.name ? name : 'New Account') %></h1>
</div>

<form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="account_name" class="col-lg-2 control-label">Name</label>
    <div class="col-lg-5">
      <input type="text" class="form-control" id="account_name" name="name" placeholder="e.g. Eftpos" />
    </div>
    <div class="errors col-lg-5"></div>
  </div>

  <div class="form-group">
    <label for="account_number" class="col-lg-2 control-label">Number</label>
    <div class="col-lg-5">
      <input type="text" class="form-control" id="account_number" name="number" placeholder="e.g. 12-1234-1234567-123" />
    </div>
    <div class="errors col-lg-5"></div>
  </div>

  <div class="form-group">
    <label for="account_type" class="col-lg-2 control-label">Type</label>
    <div class="col-lg-5">
      <select class="form-control" id="account_type" name="type"></select>
    </div>
    <div class="errors col-lg-5"></div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <button type="submit" class="save btn btn-default">Save</button>
      <a class="btn btn-link" href="<%= obj.id ? "/accounts/" + id : "/" %>">Cancel</a>
    </div>
  </div>
</form>
