<div class="page-header">
  <h1><%= obj.name ? name : 'New Sorting Rule' %></h1>
</div>

<form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="sorting_rule_contains" class="col-lg-2 control-label">Contains</label>
    <div class="col-lg-5">
      <input type="text" class="form-control" id="sorting_rule_contains" name="contains" placeholder="e.g. BOBSINSURANCE" />
    </div>
    <div class="errors col-lg-5"></div>
  </div>

  <div class="form-group">
    <label for="sorting_rule_name" class="col-lg-2 control-label">Name</label>
    <div class="col-lg-5">
      <input type="text" class="form-control" id="sorting_rule_name" name="name" placeholder="e.g. Bob's Insurance" />
    </div>
    <div class="errors col-lg-5"></div>
  </div>

  <div class="form-group">
    <label for="sorting_rule_category" class="col-lg-2 control-label">Category</label>
    <div class="col-lg-5">
      <select class="form-control" id="sorting_rule_category" name="category"></select>
    </div>
    <div class="errors col-lg-5"></div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <button type="submit" class="save btn btn-default">Save</button>
      <a class="btn btn-link" href="/sorting-rules">Cancel</a>
    </div>
  </div>
</form>
