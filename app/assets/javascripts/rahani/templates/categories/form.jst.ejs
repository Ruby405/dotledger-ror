<div class="page-header">
  <h1><%- (obj.name ? name : 'New Category') %></h1>
</div>

<form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="category_name" class="col-lg-2 control-label">Name</label>
    <div class="col-lg-5">
      <input type="text" class="form-control" id="category_name" name="name" placeholder="e.g. Rent" />
    </div>
    <div class="errors col-lg-5"></div>
  </div>

  <div class="form-group">
    <label for="category_type" class="col-lg-2 control-label">Type</label>
    <div class="col-lg-5">
      <select class="form-control" id="category_type" name="type"></select>
    </div>
    <div class="errors col-lg-5"></div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <button type="submit" class="save btn btn-default">Save</button>
      <a class="btn btn-link" href="/categories">Cancel</a>
    </div>
  </div>
</form>
